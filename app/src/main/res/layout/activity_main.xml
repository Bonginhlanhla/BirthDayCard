<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.birthdaycard.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/edtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:hint="From:"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/edtTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtFrom"
            android:layout_alignStart="@+id/edtFrom"
            android:layout_below="@+id/edtFrom"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="To:"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/btnPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edtTo"
            android:layout_alignLeft="@+id/edtTo"
            android:layout_alignRight="@+id/edtTo"
            android:layout_alignStart="@+id/edtTo"
            android:layout_below="@+id/edtTo"
            android:layout_marginTop="48dp"
            android:background="@android:color/holo_green_dark"
            android:text="Press"
            android:textColor="?attr/actionMenuTextColor"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtFrom"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edtFrom"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:text="HAPPY BIRTHDAY APP"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
